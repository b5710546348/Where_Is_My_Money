<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainPageActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:id="@+id/new_button"
        android:layout_centerVertical="true"
        android:background="#a5e8dc"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:id="@+id/summary_button"
        android:layout_below="@+id/new_button"
        android:layout_alignStart="@+id/new_button"
        android:layout_marginTop="34dp"
        android:focusable="false"
        android:background="#45f721"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textStyle="bold|normal"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_button"
        android:layout_below="@+id/summary_button"
        android:layout_alignStart="@+id/summary_button"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        android:background="#1d4ff1"
        android:layout_alignEnd="@+id/summary_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Expenses    : "
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/total_expenses_text"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Today Expenses  :  "
        android:id="@+id/textView5"
        android:layout_below="@+id/total_expenses_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/today_expenses_text"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/total_expenses_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Month Expenses  :  "
        android:id="@+id/textView6"
        android:layout_marginTop="17dp"
        android:textSize="20dp"
        android:layout_below="@+id/today_expenses_text"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/month_expenses_text"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/today_expenses_text" />

</RelativeLayout>
